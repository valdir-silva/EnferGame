<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tutorial">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_azul">

        <ImageView
            android:id="@+id/chao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/chao"
            />

        <ImageView
            android:id="@+id/enfermeira"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/chao"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-175dp"
            app:srcCompat="@drawable/enfermeira"
            />

        <ImageView
            android:id="@+id/balaoDigitarNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/enfermeira"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="90dp"
            app:srcCompat="@drawable/balao_digitar_nome"
            />

        <ImageView
            android:id="@+id/bgDigitarNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/enfermeira"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="240dp"
            app:srcCompat="@drawable/bg_digitar_nome"
            />

        <EditText
            android:id="@+id/editNome"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/enfermeira"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="240dp"/>

        <ImageView
            android:id="@+id/btnConfirmarNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bgDigitarNome"
            android:layout_alignLeft="@id/bgDigitarNome"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/btn_confirmar_nome"/>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>