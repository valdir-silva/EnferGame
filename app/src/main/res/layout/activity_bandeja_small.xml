            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/txt_escolha"
            />

        <ScrollView
