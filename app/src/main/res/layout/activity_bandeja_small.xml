<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bandeja">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_azul">

        <ImageView
            android:id="@+id/btnVoltar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            app:srcCompat="@drawable/voltar"
            />

        <ImageView
            android:id="@+id/bgBandeja"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/bandeja"
            />

        <!-- TODO Diminuir tamanho das imagens para caber 10 sem scrool-->

        <ImageView
            android:id="@+id/lblRemedioBandeja"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@id/bgBandeja"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/remedio"
            />

        <ImageView
            android:id="@+id/lblRemedioBandeja2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@id/bgBandeja"
